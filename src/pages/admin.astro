---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="CMS Admin">
  <div class="min-h-screen bg-gray-50">
    <div class="max-w-7xl mx-auto">
      <div class="bg-white shadow-sm border-b border-gray-200">
        <div class="px-4 py-6">
          <h1 class="text-2xl font-bold text-gray-900">Content Management System</h1>
          <p class="text-gray-600 mt-1">Manage your website content and schema markup</p>
        </div>
      </div>
      
      <div class="p-4">
        <div id="cms" class="bg-white rounded-lg shadow-sm border border-gray-200 min-h-screen"></div>
      </div>
    </div>
  </div>

  <!-- Load Decap CMS from CDN -->
  <script src="https://unpkg.com/decap-cms@^3.0.0/dist/decap-cms.js"></script>
  
  <script>
    // Initialize CMS - it will automatically load config.yml from the public folder
    if (window.CMS) {
      window.CMS.init();
    } else {
      console.error('Decap CMS failed to load');
    }
  </script>
</BaseLayout>
