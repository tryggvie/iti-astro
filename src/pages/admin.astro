---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="CMS Admin">
  <div class="min-h-screen bg-gray-50">
    <div class="max-w-7xl mx-auto">
      <div class="bg-white shadow-sm border-b border-gray-200">
        <div class="px-4 py-6">
          <h1 class="text-2xl font-bold text-gray-900">Content Management System</h1>
          <p class="text-gray-600 mt-1">Manage your website content and schema markup</p>
        </div>
      </div>
      
      <div class="p-4">
        <div id="status" class="mb-4 p-4 bg-blue-50 border border-blue-200 rounded-lg">
          <p class="text-blue-800">Loading CMS...</p>
        </div>
        <div id="cms" class="bg-white rounded-lg shadow-sm border border-gray-200 min-h-screen"></div>
      </div>
    </div>
  </div>

  <!-- Load Decap CMS from CDN -->
  <script src="https://unpkg.com/decap-cms@^3.0.0/dist/decap-cms.js"></script>
  
  <script>
    // Initialize CMS with better error handling
    function initCMS() {
      const statusEl = document.getElementById('status');
      
      try {
        if (statusEl && (window as any).CMS) {
          console.log('Decap CMS loaded successfully');
          statusEl.innerHTML = '<p class="text-green-800">✓ Decap CMS loaded successfully</p>';
          
          // Initialize the CMS
          (window as any).CMS.init();
          statusEl.innerHTML = '<p class="text-green-800">✓ CMS initialized successfully</p>';
        } else {
          throw new Error('CMS object not found');
        }
      } catch (error) {
        console.error('Error initializing CMS:', error);
        if (statusEl) {
          statusEl.innerHTML = `<p class="text-red-800">✗ Error: ${(error as Error).message}</p>`;
        }
      }
    }

    // Wait for CMS to load
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initCMS);
    } else {
      initCMS();
    }
  </script>
</BaseLayout>
