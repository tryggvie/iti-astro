---
import BaseLayout from '../../../layouts/BaseLayout.astro';

// This would eventually come from Strapi API
const articles = [
  {
    title: "Best Times to See the Northern Lights in Iceland",
    summary: "Discover the optimal months, times, and weather conditions for viewing the aurora borealis in Iceland",
    date: "2024-01-15",
    category: "northern-lights",
    tags: ["aurora", "timing", "weather", "seasonal"],
    slug: "best-times-northern-lights-iceland",
    readTime: "8 min read"
  },
  {
    title: "Top Locations for Northern Lights Viewing",
    summary: "Explore the best spots across Iceland for witnessing the magical aurora displays, from remote areas to accessible viewpoints",
    date: "2024-01-10",
    category: "northern-lights",
    tags: ["locations", "viewing spots", "accessibility", "photography"],
    slug: "top-locations-northern-lights-iceland",
    readTime: "12 min read"
  },
  {
    title: "The Science Behind the Aurora Borealis",
    summary: "Understand the fascinating physics and solar activity that creates these spectacular light shows in the sky",
    date: "2024-01-05",
    category: "northern-lights",
    tags: ["science", "physics", "solar activity", "magnetic field"],
    slug: "science-aurora-borealis",
    readTime: "10 min read"
  },
  {
    title: "Icelandic Folklore and the Northern Lights",
    summary: "Discover the rich cultural stories and legends that surround the aurora in Icelandic tradition",
    date: "2024-01-01",
    category: "northern-lights",
    tags: ["folklore", "culture", "mythology", "traditions"],
    slug: "icelandic-folklore-northern-lights",
    readTime: "6 min read"
  },
  {
    title: "Photography Tips for Capturing the Aurora",
    summary: "Learn essential techniques and camera settings for photographing the northern lights in Iceland",
    date: "2023-12-28",
    category: "northern-lights",
    tags: ["photography", "camera settings", "tips", "equipment"],
    slug: "photography-tips-northern-lights",
    readTime: "15 min read"
  },
  {
    title: "Northern Lights Tours and Guided Experiences",
    summary: "Find the best guided tours and experiences for viewing the aurora with expert local knowledge",
    date: "2023-12-20",
    category: "northern-lights",
    tags: ["tours", "guided experiences", "local knowledge", "planning"],
    slug: "northern-lights-tours-iceland",
    readTime: "9 min read"
  },
  {
    title: "Northern Lights Viewing Apps and Forecasts",
    summary: "Discover the best apps and tools for predicting aurora activity and planning your viewing experience",
    date: "2023-12-15",
    category: "northern-lights",
    tags: ["apps", "forecasts", "planning", "technology"],
    slug: "northern-lights-apps-forecasts",
    readTime: "7 min read"
  }
];

const categoryInfo = {
  title: "Northern Lights",
  description: "Experience the magical dance of the aurora borealis in Iceland's dark winter skies. The northern lights, or aurora borealis, are one of nature's most spectacular displays, painting the night sky with vibrant colors and ethereal movements.",
  icon: "✨",
  bestTime: "September to March",
  peakHours: "9 PM to 2 AM",
  difficulty: "Moderate",
  requirements: ["Clear skies", "Dark location", "Patience", "Warm clothing"]
};
---

<BaseLayout title="Northern Lights - Aurora Borealis in Iceland">
  <div class="min-h-screen bg-gradient-to-br from-indigo-50 to-purple-100">
    <!-- Hero Section -->
    <div class="bg-white shadow-sm border-b border-gray-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <div class="text-center">
          <div class="text-6xl mb-4">✨</div>
          <h1 class="text-4xl font-bold text-gray-900 mb-4">
            Northern Lights
          </h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-6">
            {categoryInfo.description}
          </p>
          
          <!-- Quick Info Cards -->
          <div class="grid grid-cols-1 md:grid-cols-4 gap-4 max-w-4xl mx-auto">
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
              <div class="text-blue-600 font-semibold text-sm">Best Time</div>
              <div class="text-gray-900 font-medium">{categoryInfo.bestTime}</div>
            </div>
            <div class="bg-purple-50 border border-purple-200 rounded-lg p-4">
              <div class="text-purple-600 font-semibold text-sm">Peak Hours</div>
              <div class="text-gray-900 font-medium">{categoryInfo.peakHours}</div>
            </div>
            <div class="bg-green-50 border border-green-200 rounded-lg p-4">
              <div class="text-green-600 font-semibold text-sm">Difficulty</div>
              <div class="text-gray-900 font-medium">{categoryInfo.difficulty}</div>
            </div>
            <div class="bg-orange-50 border border-orange-200 rounded-lg p-4">
              <div class="text-orange-600 font-semibold text-sm">Requirements</div>
              <div class="text-gray-900 font-medium">{categoryInfo.requirements.length} items</div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Requirements Section -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="bg-white rounded-lg shadow-md p-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">What You Need to See the Northern Lights</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <h3 class="text-lg font-semibold text-gray-800 mb-3">Essential Conditions</h3>
            <ul class="space-y-2">
              {categoryInfo.requirements.map((requirement) => (
                <li class="flex items-center text-gray-600">
                  <svg class="w-5 h-5 text-green-500 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  {requirement}
                </li>
              ))}
            </ul>
          </div>
          <div>
            <h3 class="text-lg font-semibold text-gray-800 mb-3">Pro Tips</h3>
            <ul class="space-y-2 text-gray-600">
              <li>• Check aurora forecasts before heading out</li>
              <li>• Allow your eyes 15-20 minutes to adjust to darkness</li>
              <li>• Bring a thermos with hot drinks</li>
              <li>• Consider a guided tour for first-time viewers</li>
              <li>• Have backup plans for cloudy nights</li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Articles Section -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="mb-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Northern Lights Articles</h2>
        <p class="text-gray-600">Everything you need to know about experiencing the aurora borealis in Iceland</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {articles.map((article) => (
          <article class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 overflow-hidden">
            <div class="p-6">
              <div class="flex items-center justify-between mb-3">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  {article.category}
                </span>
                <span class="text-sm text-gray-500">{article.readTime}</span>
              </div>
              
              <h3 class="text-xl font-semibold text-gray-900 mb-3 line-clamp-2">
                {article.title}
              </h3>
              
              <p class="text-gray-600 mb-4 line-clamp-3">
                {article.summary}
              </p>
              
              <div class="flex items-center justify-between">
                <div class="flex flex-wrap gap-1">
                  {article.tags.slice(0, 3).map((tag) => (
                    <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-gray-100 text-gray-700">
                      {tag}
                    </span>
                  ))}
                </div>
                <time class="text-sm text-gray-500" datetime={article.date}>
                  {new Date(article.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
                </time>
              </div>
              
              <a 
                href={`/natural-phenomena/northern-lights/${article.slug}`}
                class="mt-4 inline-flex items-center justify-center w-full px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors"
              >
                Read Article
                <svg class="ml-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            </div>
          </article>
        ))}
      </div>
    </div>

    <!-- Navigation -->
    <div class="bg-white border-t border-gray-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/natural-phenomena/"
            class="inline-flex items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors"
          >
            <svg class="mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            Back to Natural Phenomena
          </a>
          <a 
            href="/"
            class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors"
          >
            Home
          </a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
